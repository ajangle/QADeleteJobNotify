package File;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.io.IOException;
import java.time.YearMonth;
import java.time.format.DateTimeFormatter;
import java.util.Scanner;

public class FileWordSearch 
{
	
public static void main(String[] args) throws IOException{
		
		//Path to the location of the log file
		String otcsadm1qa = "\\\\njv-otcsadm1-qa\\Object Importer\\log_files\\";
		
		//\\\\njv-otcsadm1-qa\\Object Importer\\log_files\\201982_QA_Documents_Cleaning.log
		
		 YearMonth current = YearMonth.now();
		 String today = current.format(DateTimeFormatter.ofPattern("yyyyMM"));
		 	
		 if(today.charAt(4) == '0') { today = current.format(DateTimeFormatter.ofPattern("yyyyM")); }
         
         //System.out.println(today);
        
         // -------------------------------All good up to here
        
         //FindFile ff = new FindFile();
         Scanner scan = new Scanner(System.in);
         System.out.println("Enter today's date: " );
         String todayDate = scan.next();
         scan.close();
         
         String retrieveLog = otcsadm1qa + today + todayDate + "_QA_Documents_Cleaning.log";
        // System.out.println("Enter the directory where to search ");
        // String directory = scan.next();
        // ff.findFile(name,new File(directory));
         
         System.out.println(retrieveLog);


	
   
      //File f1=new File("\\\\njv-otcsadm1-qa\\\\Object Importer\\\\log_files\\\\201982_QA_Documents_Cleaning.log"); //Creation of File Descriptor for input file
      File f1=new File(retrieveLog); //Creation of File Descriptor for input file
      String[] words=null;  //Intialize the word Array
      FileReader fr = new FileReader(f1);  //Creation of File Reader object
      BufferedReader br = new BufferedReader(fr); //Creation of BufferedReader object
      String s;     
      String input="Process";   // Input word to be searched
      String notify="";
      int count=0;   //Intialize the word to zero
      while((s=br.readLine())!=null)   //Reading Content from the file
      {
         words=s.split(" ");  //Split the word using space
          for (String word : words) 
          {
                 if (word.equals(input))   //Search for the given word
                 {
                   count++;    //If Present increase the count by one
                 }
          }
      }
      if(count!=0)  //Check for count not equal to zero
      {
         //System.out.println("The given word is present for "+count+ " Times in the file");
         notify="Done";
         System.out.println(notify);
        		 
      }
      else
      {
         System.out.println("The given word is not present in the file");
         notify="Not Done";
         System.out.println(notify);
      }
      
         fr.close();
   
}

}
